
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
   
}



<div class="bg-white">
        <div class="sign-in-area pt-100 pb-70 bg-black" style="background:url('../FrontAssets/loginimage.jpeg') ; background-size: cover;">


         <div class="container">

            <div class="row justify-content-center align-items-center d-flex vh-100">
               <div class="col-lg-4 mx-auto">
                  <div class="osahan-login py-4">
                     
                        <div class="user-all-form">


                           

                      <div class="contact-form" style="margin-top:10%;"> @*form card body*@

                           <div class="text-center mb-4">                        
                            

                        <a href="@Url.Action("Index","Home")"><img src="~/images/logo.png" alt=""></a>
                        <h5 class="font-weight-bold mt-3">First, let's find your account</h5>
                        <p class="text-muted">Please enter your email</p>

                     </div>

                     <form method="post" asp-controller="Auth" asp-action="PostForgotPassword">
                        <div class="form-group">
                           
                            <label class="mb-1">Email</label>

                           <div class="position-relative icon-form-control">
                             <i class="mdi mdi-email-outline position-absolute"></i>
                              <input type="email" name="Email" class="form-control" required>
                           </div>
                           <span style="color:@ViewBag.Color;">@ViewBag.Message</span>
                        </div>
                        <button class="btn btn-success btn-block text-uppercase mt-0" type="submit"> Send Mail </button>
                        <div class="py-3 d-flex align-item-center">
                           <a href="@Url.Action("Login","Auth")">Sign In</a>
                          
                        </div>
                     </form>

                     </div>

                     </div>
                  </div>
               </div>
            </div>
         </div>

         </div>
      </div>