@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}





        <!-- Sign In Area -->
        <div class="sign-in-area pt-100 pb-70 bg-black" style="background:url('../FrontAssets/loginimage.jpeg') ; background-size: cover;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="user-all-form">
                            <div class="contact-form" style="margin-top:10%;">
                                <div class="section-title text-center" >
                                    
                                    <h2>Sign In to Your Account!</h2>
                                </div>
                                @*<form action="../Auth/PostLogin" method="post">*@
                                <form action="@Url.Action("PostLogin","Auth")" method="post">
                                    <div class="row">
                                        <div class="col-lg-12 ">
                                            <div class="form-group">
                                                <input type="email" name="Email" id="name" class="form-control" required data-error="Please enter your Username or Email" placeholder=" Email">
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="form-group">
                                                <input class="form-control" type="password" name="Password" placeholder="Enter Password">
                                            </div>
                                        </div>

                                        
            
                                        <div class="col-lg-4 col-sm-4">
                                            <a class="forget" href="@Url.Action("ForgotPassword","Auth")">Forgot my password?</a>
                                        </div><br />
        
                                        <p id="incorrect_logins" style="color:@ViewBag.Color">@ViewBag.Message</p><br />
                                        <div class="col-lg-12 col-md-12 text-center">
                                            <button type="submit" class="default-btn">
                                                Sign In
                                            </button>
                                        </div>

                                       
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In Area End -->

                                            <script>
                                                $("#incorrect_logins").fadeOut(3000);
                                            </script>