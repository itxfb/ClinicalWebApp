@{
    ViewBag.Title = "View / Update Study";
}
<div class="p-20">

    <div class="row">
        <form action="@Url.Action("PostUpdateStudy", "Admin")" method="post">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                          <h2 class="panel-title text-center text-bold">View / Update Study</h2>
                        </div>
                        <input type="hidden" name="Id" value="@ViewBag.Study.Id"/>
                        <div class="panel-body">
                            <legend class="text-bold text-uppercase"><span class="text-danger">*</span> Fields are mandatory to fill</legend>


                            <div class="form-group">
                                <label class="text-bold">Protocol Title <span class="text-danger">*</span></label>
                                <input type="text" onkeyup="limitText(this,40)" class="form-control" required name="Protocol_Title" placeholder="Enter Protocol Title Here" value="@ViewBag.Study.Protocol_Title">
                            </div>

                            <div class="form-group">
                                <label class="text-bold">Condition Or Disease <span class="text-danger">*</span></label>
                                <select id="diseases" onkeyup="limitText(this,40)" class="form-control" required name="Condition_Or_Disease" placeholder="Enter Condition Or Disease Here" value="@ViewBag.Study.Condition_Or_Disease">
                                    

                                </select>
                            </div> 
                            
                            <div class="form-group">
                                <label class="text-bold">Intervention/Treatment <span class="text-danger">*</span></label>
                                <input type="text" onkeyup="limitText(this,40)" class="form-control" required name="Intervention_treatment" placeholder="Enter Intervention Treatment Here" value="@ViewBag.Study.Intervention_treatment">
                            </div>
                            
                            <div class="form-group">
                                <label class="text-bold">Phase<span class="text-danger">*</span></label>
                                <select onkeyup="limitText(this,40)" class="form-control" required name="Phase" placeholder="Enter Phase Here" value="@ViewBag.Study.Phase">

                                    <option>Phase 1</option>
                                    <option>Phase 2</option>
                                    <option>Phase 3</option>
                                    <option>Phase 4</option>
                                </select>
                            </div> 
                            
                            
                            <div class="form-group">
                                <label class="text-bold">Study Type<span class="text-danger">*</span></label>
                                <select onkeyup="limitText(this,40)" class="form-control" required name="Study_Type" placeholder="Enter Study Type Here" value="@ViewBag.Study.Study_Type">
                                    <option>Interventional</option>
                                    <option>Observational</option>
                                    <option>Expanded Access</option>

                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label class="text-bold">Enrollment<span class="text-danger">*</span></label>
