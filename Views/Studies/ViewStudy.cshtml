                            </div> 
                            
                         
                       
                            <input type="hidden" name="OrganizationId" value="@ViewBag.Study.OrganizationId"/>
                            

                            

                            <input type="hidden" name="CreatedBy" value="@ViewBag.AdminId" />
                           
                           
                            <div class="text-right">
                                <button type="submit" id="subBtn" class="btn btn-primary">Update <i class="icon-database-insert position-right"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>

